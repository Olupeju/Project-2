<div class="container">

  <div class="row">
    <div class="col-sm-9">
      <h2>Add New Recipe</h2>
    </div>
    <div class="col-sm-3">
      <a href="/">
          <button type="button" class="btn btn-primary btn-lg">Home Page</button>
    </a>
    </div>
  </div>

   <div class="row">
    <div class="col-sm-9"
      <form>
        <div class="form-group">
          <label>Name Your Recipe</label>
          <input type="text" class="form-control" id="recipeName">
        </div>
        <div class="form-group">
          <label>Food Type</label>
          <select class="form-control" id="foodType">
            <option value="Italian">Italian</option>
            <option value="Asian">Asian</option>
            <option value="African">African</option>
            <option value="Mexican">Mexican</option>
            <option value="European">European</option>
            <option value="American">American</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="form-group" id="ingredients">
          <label>Add Ingredients</label>
          <input class="form-control" id="ingredient1">
        </div>
        <button class="btn btn-primary btn-sm" type="button" id="addIngredient">Add Another Ingredient</button>
        <br>
        <br>
        <button class="btn btn-primary btn-lg" type="submit" action="/api/recipes" method="post">Submit</buttom>
      </form>
    </div>
  </div>
</div>

<script>
  var ingredientNum = 2;
  var ingredientId = "ingredient" + ingredientNum;
  $("#addIngredient").on("click", function() {
    event.preventDefault();
    var newIngredient = $("<input class='form-control' id='" + ingredientId + "'>");
    $("#ingredients").append(newIngredient);
    ingredientNum++;
    console.log(newIngredient);
  });
</script>
