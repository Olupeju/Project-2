
<div id="home">
  <div class="container">

    <div class="row">
      <div class="col-sm-9">
        <h1>On-The-Go Recipes</h1>
      </div>
      <div class="col-sm-3">
        <a href="/recipe">
          <button type="button" class="btn btn-primary btn-lg">Add New Recipe</button>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <h3>Current Recipes</h3>
        <ul id="recipeList">
          {{#each recipes}}
          <li data-id="{{this.id}}">{{title}}</li>
          {{/each}}
        </ul>
      </div>
    </div>

  </div>
</div>